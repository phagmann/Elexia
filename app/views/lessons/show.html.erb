                            <a href="javascript:void(0);" style="position:absolute;left:90%;" class="makeblack"><span class="glyphicon glyphicon-remove-circle" onclick="spaceOutNotes('note_doc_<%= box.id %>','note_doc_content_<%= box.id %>','note_doc_edit_<%= box.id %>','note_doc_save_<%= box.id %>');"></span></a>

                            <br>
                            <span id="note_doc_content_<%= box.id %>">
                                <% if d_note != 0 %>
                                     <%= d_note %>
                                <% end %>


