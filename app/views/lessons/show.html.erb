        <input id="hidden_solve_box_<%= box.id %>" value="<%= box.solve.solve_math %>" hidden>
        <div class="text-right">
            <% s_note = box.solve.solve_note(current_user.id,box.id) %>
            

            <a href="javascript:void(0);" class="makeblack"><span class="glyphicon glyphicon-pushpin pin" onclick="spaceOutNotes('note_solve_<%= box.id %>');">-</span></a>
            <div id="note_solve_<%= box.id %>" style="width:20%;position:absolute;left:105%;" hidden>
