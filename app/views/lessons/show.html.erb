                        <a id="note_solve_edit_<%= box.id %>" href="javascript:void(0);" style="position:absolute;left:80%;" class="makeblack"><span class="glyphicon glyphicon-pencil" onclick="textBoxIn('note_solve_content_<%= box.id %>','note_solve_edit_<%= box.id %>','note_solve_save_<%= box.id %>');"></span></a>

