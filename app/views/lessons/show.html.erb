                            <a href="javascript:void(0);" style="position:absolute;left:90%;" class="makeblack"><span class="glyphicon glyphicon-remove-circle" onclick="spaceOutNotes('note_video_<%= box.id %>','note_video_content_<%= box.id %>','note_video_edit_<%= box.id %>','note_video_save_<%= box.id %>');"></span></a>

                            <br>
                            <span id="note_video_content_<%= box.id %>">
                                <% if v_note != 0 %>
                                     <%= v_note %>
