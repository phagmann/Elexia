        </div>

        <div class="text-right">
                <a href="javascript:void(0);" class="makeblack"><span class="glyphicon glyphicon-pushpin pin" onclick="spaceOutNotes('note_video_<%= box.id %>','note_video_content_<%= box.id %>','note_video_edit_<%= box.id %>','note_video_save_<%= box.id %>');">-</span></a>
                <% v_note = box.video.video_note(current_user.id,box.id) %>
                    <div id="note_video_<%= box.id %>" style="width:20%;position:absolute;left:105%;" hidden>
                        <hgroup class="speech-bubble text-left" style="min-width:200px;min-height:200px;;bottom:17px;">

                            <a id="note_video_edit_<%= box.id %>" href="javascript:void(0);" style="position:absolute;left:80%;" class="makeblack"><span class="glyphicon glyphicon-pencil" onclick="textBoxIn('note_video_content_<%= box.id %>','note_video_edit_<%= box.id %>','note_video_save_<%= box.id %>');"></span></a>

