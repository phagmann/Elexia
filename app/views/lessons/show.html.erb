                    </div>
                
            </div>

        <br/>
        <br/>
    <% end %>


    <% if box.doc %>
        <div class="text-left" style="width:50%;position:relative;left:10%;">
          <embed style =" position:relative;left:80px" src="<%= box.doc.doc_url %>" width="500" height="450" alt="pdf">
<!-- https://www.myskillstutor.com/guides/classroomguide/mffWorksheets.pdf -->

        </div>

        <div class="text-right">
                <a href="javascript:void(0);" class="makeblack"><span class="glyphicon glyphicon-pushpin pin" onclick="spaceOutNotes('note_doc_<%= box.id %>','note_doc_content_<%= box.id %>','note_doc_edit_<%= box.id %>','note_doc_save_<%= box.id %>');">-</span></a>
