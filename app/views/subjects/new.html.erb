
<form action="../subjects" method="post">
<br/>
<input type="text" class="form-control" id="user_id" name="user_id" value="<%= current_user.id %>" style="display:none;">
<div class="form-group row">
    <div class="col-sm-6 col-sm-offset-3">
        <label for="subject_name">Subject Name:</label>
        <input type="text" class="form-control" id="subject_name" name="subject_name" maxlength="100">
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-6 col-sm-offset-3">
        <label for="subject_description">Description:</label>
        <input type="text" class="form-control" id="subject_description" name="subject_description" >
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-offset-6">
        <input type="submit" value="Submit">
   </div>
</div>


</form>
